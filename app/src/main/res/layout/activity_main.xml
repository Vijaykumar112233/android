<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/purple_200"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/memory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"/>

    </ScrollView>


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@color/teal_200"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:hint="0"
        android:paddingHorizontal="30dp"
        android:textSize="30pt"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <Button
                android:id="@+id/butAC"
                android:onClick="AC"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="AC"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/but0"
                android:onClick="number0"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="0"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/butbackspace"
                android:onClick="back"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="back"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/butmulti"
                android:onClick="multi"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="x"
                android:textColor="@color/white"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/but9"
                android:layout_marginRight="1pt"
                android:onClick="number9"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="9"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/but8"
                android:onClick="number8"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="8"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/but7"
                android:onClick="number7"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="7"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/butplus"
                android:onClick="plus"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"
                android:text="+"
                android:textColor="@color/white"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/but6"
                android:onClick="number6"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="6"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/but5"
                android:onClick="number5"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="5"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/but4"
                android:onClick="number4"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="4"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/butsub"
                android:onClick="sub"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"
                android:text="-"
                android:textColor="@color/white"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/but3"
                android:onClick="number3"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="3"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/but2"
                android:onClick="number2"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="2"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/but1"
                android:onClick="number1"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="1"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/butdiv"
                android:onClick="div"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/design_default_color_primary_dark"
                android:text="/"
                android:textColor="@color/white"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/butequal"
            android:onClick="equalto"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="38pt"
            android:layout_weight="2"
            android:background="@color/purple_200"
            android:text="="
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/butdot"
            android:onClick="dot"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="38pt"
            android:layout_weight="2"
            android:background="@color/purple_200"
            android:text="."
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/butpercent"
            android:onClick="percent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/design_default_color_primary_dark"
            android:text="%"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>
